<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mokki_softa.MainPage">


    <ScrollView>
        <VerticalStackLayout  Spacing="25"
                              Padding="30,0"
                              VerticalOptions="Center">
            <Picker x:Name="aluemuokkaus" Title="valitse alue" HorizontalOptions="Center">

            </Picker>
            <Picker x:Name="mokkimuokkaus" Title="valitse mökki" HorizontalOptions="Center">

            </Picker>
            <Picker x:Name="test" Title="test123" HorizontalOptions="Center">

            </Picker>
            <!-- UUDEN NAPIN KOODI -->
            <Button
                 x:Name="DatabaseBtn"
                 Text="Connect to database"
                 SemanticProperties.Hint="Connects to database"
                 Clicked="OnDatabaseClicked"
                 HorizontalOptions="Fill" />

            <Button
                x:Name="CounterBtn"
                Text="Click me"
                SemanticProperties.Hint="Counts the number of times you click"
                Clicked="OnCounterClicked"
                HorizontalOptions="Center" />
        </VerticalStackLayout>
    </ScrollView>

    

</ContentPage>
