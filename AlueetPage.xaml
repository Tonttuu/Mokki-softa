<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mokki_softa.AlueetPage">
<ScrollView BackgroundColor="LightGreen">

    <!-- aluueet form-->
    <VerticalStackLayout Padding="10" Spacing="25" HorizontalOptions="Center" >
        <Label Text="Alueet" FontAttributes="Bold"/>
        <!-- Name Field -->
        <Entry x:Name="entryAlueNimi" Placeholder="Nimi" WidthRequest="500"/>
        <!-- Buttons -->
        <Button Text="Save Alue" Clicked="OnSaveAlueClicked" WidthRequest="500"/>
    </VerticalStackLayout> 

</ScrollView>

</ContentPage>